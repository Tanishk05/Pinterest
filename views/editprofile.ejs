                d="M0 12c0 5.123 3.211 9.497 7.73 11.218-.11-.937-.227-2.482.025-3.566.217-.932 1.401-5.938 1.401-5.938s-.357-.715-.357-1.774c0-1.66.962-2.9 2.161-2.9 1.02 0 1.512.765 1.512 1.682 0 1.025-.653 2.557-.99 3.978-.281 1.189.597 2.159 1.769 2.159 2.123 0 3.756-2.239 3.756-5.471 0-2.861-2.056-4.86-4.991-4.86-3.398 0-5.393 2.549-5.393 5.184 0 1.027.395 2.127.889 2.726a.36.36 0 0 1 .083.343c-.091.378-.293 1.189-.332 1.355-.053.218-.173.265-.4.159-1.492-.694-2.424-2.875-2.424-4.627 0-3.769 2.737-7.229 7.892-7.229 4.144 0 7.365 2.953 7.365 6.899 0 4.117-2.595 7.431-6.199 7.431-1.211 0-2.348-.63-2.738-1.373 0 0-.599 2.282-.744 2.84-.282 1.084-1.064 2.456-1.549 3.235C9.584 23.815 10.77 24 12 24c6.627 0 12-5.373 12-12S18.627 0 12 0 0 5.373 0 12">
              </path>
            </svg></div>
  
          <div class="allbtns ">
            <a href="/home" class="buttons  p-3 ">Home</a>
            <a class="buttons  p-3">Explore</a>
            <a href="/createpin" class="buttons  p-3">Create</a>
  
          </div>
        </div>
  
  
  
        <div class="part2-nav flex gap-5 mt-2 ">
          <a href="/profile" id="firstletter" class="nav-2 capitalize text-lg"></a>
          <a id="set" class="nav-2"><i class="ri-arrow-down-s-line text-lg"></i></a>
             
        </div>
  
      </div>
        
  
      <div id="settings" class="main-overlay hidden py-4 pl-4 w-[20vmax] rounded-2xl ">

        <p class="ml-1">cuurently in</p>
        <div class="top w-full mt-3 flex gap-4 ">
  
          <div class="profile w-[4.5vmax] h-[4.5vmax] rounded-full overflow-hidden">
            <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profile %>" alt="">
          </div>
  
          <div class="right mt-1 leading-none">
            <h3 class="font-medium text-sm leading-none ">
              <%= user.username %>
            </h3>
            <p class="font-light mt-1 text-sm">Personal</p>
  
          </div>
  
  
        </div>
  
  
        <div class="account mt-4">
          <p class="text-sm ml-1">Your accounts</p>
          <a href="/add/accounts">
            <h3 class="hover px-2 py-2 text-lg mt-3 font-semibold cursor-pointer">Add account</h3>
          </a>
  
        </div>
  
        <div class="moreoptions mt-4">
          <h3 class="text-sm ml-1">settings</h3>
          <a href="/home ">
            <h3 class="hover ml-1 px-1 py-2 text-lg mt-3 font-semibold cursor-pointer">Tune your feed</h3>
          </a>
          <a href="/logout">
            <h3 class="hover ml-1 px-1 py-2 text-lg mt-3 font-semibold cursor-pointer">Log out</h3>
          </a>
  
        </div>
  
  
  
  
      </div>


        <div class="main-content  w-full  h-3/4  overflow-x-hidden overflow-y-auto flex ">
            
        <div class="left w-[25vmax] h-full  px-5 font-medium px-5  flex flex-col gap-5 pt-5 " style="font-size: 16px;">
          <p>Edit profile</p>
          <p>Account management</p>
          <p>Profile visibility</p>
          <p>Tune your home feed</p>
          <p>Claimed accounts</p>
          <p>Social permissions</p>
          <p>Notifications</p>
          <p>Privacy and data</p>
          <p>Security</p>
          <p>Branded content</p>

        </div>

        <div class="right w-[70vmax] h-full  relative pt-2">
            <h3 class="text-2xl font-semibold mt-3  tracking-wide">Edit profile</h3>
            <p class=" text-sm font-light w-[50%] mt-4">Keep your personal details private. Information you add here is  <br> visible to any who can view your profile.
           </p>

            <div class="editprofile mt-6">
                <p class=" ml-1 text-sm font-light ">Photo</p>

                 <div class="profile-container flex gap-6 items-center ">

                     <form hidden id="changeprofileform" action="/uploadprofile" method="post" enctype="multipart/form-data">
                       <input id="file" type="file" name="profile">
                      
                     </form>

    
                    <div class="profile  rounded-full" style="width: 70px; height:70px; background-color : rgb(232, 232, 232);  border : 1px solid black;">
                         <img id="currentprofile"  src="/images/uploads/<%= user.profile %>" alt="" class="w-full h-full object-cover object-center rounded-full">
                    </div>

               
                         
                      
                    <a id="changeprofile" class="px-3 py-1.5 text-sm bg-[#E2E2E2] rounded-full b cursor-pointer">change</a>
                 </div>

                  
               <form action="/saveprofile" method="post" >
                <div class="namesection flex gap-6 mt-5">
                    <div class="firstname w-[15%]">
                      <p class="text-sm font-light">First name</p>
                      <input id="firstname" name="firstname" type="text" value="<%= user.firstname %>" class="px-5 py-2 text-xs rounded-2xl  mt-2" style="border: 1px solid #cecece;">
                    </div>
  
                    <div class="lastname w-[15%]">
                      <p class="text-sm font-light">Last name</p>
                      <input id="lastname" name="lastname" type="text" value="<%= user.lastname %>" class="px-5 py-2 text-xs  rounded-2xl  mt-2" style="border: 1px solid #cecece;">
                    </div>
  
                  
                   </div>
  
                   <div class="about mt-5">
                      <p class="text-sm font-light">About</p>
                      <input id="about" name="About" class="py-5 px-2 text-xs  rounded-2xl  mt-2  w-2/5" style="border: 1px solid #cecece; " placeholder="Tell your story"  value="<%= user.About %>">
                   </div>
  
  
                   <div class="websitelink mt-5">
                      <p class="text-sm font-light">Website</p>
                      <input id="website" name="website" class="py-2 px-2  text-xs rounded-2xl  mt-2  w-2/5" style="border: 1px solid #cecece; " placeholder="Add a link to trafic your site"  value="<%= user.website %>">
                   </div>
  
  
  
                   <div class="username mt-5">
                      <p class="text-sm font-light">username</p>
                      <input id="username" name="username" class="py-2 px-2  text-xs rounded-2xl  mt-2  w-2/5" style="border: 1px solid #cecece; " value="<%= user.username %>" >
  
                      <p class="text-sm font-light">www.pinterest.com/<%= user.username %></p>
                   </div>
  
                         
  
              </div>
  
          </div>
  
         
          </div>
  
          <div class="footer w-full h-[10%] bg-[#FFFFFF]  z-10  fixed  flex items-center justify-center  cursor-pointer">
                <a id="reset" class="ml-2 bg-[#E9E9E9] py-2 px-3 rounded-3xl "> Reset</a>

                <button  type="submit" class="ml-2  bg-[#E9E9E9] py-2 px-3 rounded-3xl ">Save</button>
  
          </div>  
           </form>
     </div>

     <style>
        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "gilroy";
          }
    
          html,body{
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
          }
    
    
          #logo{
        fill: red;
      }

    

     
      
    .buttons{
        cursor: pointer;

    }

     .buttons:hover{
        background-color: black;
        color: white;
        border-radius: 50px;
     }

    
     

     .nav-2{
      position: relative;
      background-color:#E9E9E9;
      width: 2vw;
      height: 2vw;
      border-radius: 50%;
      display: flex;
      align-items:center;
      justify-content: center;

     }


     .post-option a{
      position: relative;
      cursor: pointer;
     }

     

     #settings {
      z-index: 99999;
      position: absolute;
      right: 3vw;
      top: 9%;
      background-color:#E60023;
      color:rgb(255, 255, 255);
    }


      .hover{
         position: relative;
         border-radius: 10px;
         transition: all ease 3s;
         cursor: pointer;
      }
      

      .hover:hover{
         background-color: silver;
      }


         .left p{
            width: fit-content;
         }

        .left p:nth-child(1){
            border-bottom: 3px solid black;
            width: fit-content;
        }
         .footer{
            margin-top: 20px;
            box-shadow: 10px 3px 10px rgb(220, 220, 220);
         }
     </style>

     <script>


const username = `<%= user.username %>`;
   const arr = Array.from(username)
    
   const firstletter = arr[0]; 

   document.querySelector("#firstletter").innerHTML = firstletter



   let check = 0;
   document.querySelector("#set").addEventListener("click", function(){
    
    if(check == 0){
      document.querySelector("#settings").style.display = "block";
      check = 1
    }

    else{
      document.querySelector("#settings").style.display = "none";
      check = 0
    }
   })



        document.querySelector("#changeprofile").addEventListener("click", function(e){
            document.querySelector("#file").click();
            document.querySelector("#file").addEventListener("change", function(){
             
            document.querySelector("#changeprofileform").submit();
            
    
            
                })
        })




        function resetprofile (){
         const firstname = document.querySelector("#firstname").value = ""
         const lastname = document.querySelector("#lastname").value = ""
         const about = document.querySelector("#about").value = ""
         const website = document.querySelector("#website").value = ""
         const username = document.querySelector("#username").value = ""
        }


        document.querySelector("#reset").addEventListener("click", resetprofile)
        
     </script>
     <script src="https://cdn.jsdelivr.net/npm/axios@1.1.2/dist/axios.min.js"></script>
</body>
</html>